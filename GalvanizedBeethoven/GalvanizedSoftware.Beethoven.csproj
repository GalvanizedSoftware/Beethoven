  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Galvanized Software</Authors>
    <Company>Galvanized Software</Company>
    <Description>Fluent.style class implementation / composition. Automapping, duck-typing, auto-implementation and more ...</Description>
    <PackageTags>composition;dynamic creation;duck typing;castle.core;auto interface implementation</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>0.4.3.0</Version>
    <AssemblyVersion>0.4.3.0</AssemblyVersion>
    <PackageLicenseUrl></PackageLicenseUrl>
    <Copyright>Copyright 2018 Galvanized Software</Copyright>
    <PackageProjectUrl>https://github.com/GalvanizedSoftware/Beethoven</PackageProjectUrl>
    <RepositoryUrl>https://github.com/GalvanizedSoftware/Beethoven</RepositoryUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Core" Version="4.3.1" />
  </ItemGroup>

</Project>
